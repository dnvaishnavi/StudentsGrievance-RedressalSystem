pipeline {
    agent any

    tools {
        jdk 'JDK_21'
        maven 'Maven_3'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'feature/ci', url: 'https://github.com/dnvaishnavi/StudentsGrievance-RedressalSystem.git'
            }
        }

        stage('Build Project') {
            steps {
                dir('grievences') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test Project') {
            steps {
                dir('grievences') {
                    bat 'mvn test'
                }
            }
        }

        stage('Post Actions') {
            steps {
                echo '✅ Build completed successfully!'
            }
        }
    }

    post {
        failure {
            echo '❌ Build failed! Check console logs for details.'
        }
    }
}
